<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked (selected) state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#8A77D9" /> <!-- Will be set programmatically -->
            <stroke android:width="1dp" android:color="#8A77D9" /> <!-- Will be set programmatically -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Default (unchecked) state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@android:color/transparent" /> <!-- Will be set programmatically -->
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>