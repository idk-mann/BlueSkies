<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/spinner_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Location"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/location_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location name"
        android:inputType="textPersonName"
        android:maxLines="1" />

    <EditText
        android:id="@+id/location_coord_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude, Longitude (e.g. 1.23, 103.45)"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/pick_on_map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick on Map"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Or Select by City"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <AutoCompleteTextView
        android:id="@+id/location_city_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search city"
        android:inputType="text"
        android:completionThreshold="1"
        android:maxLines="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="?attr/materialButtonOutlinedStyle"
            android:text="Cancel" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            style="?attr/materialButtonOutlinedStyle"
            android:text="Add"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
