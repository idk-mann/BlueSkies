<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="8dp"
    app:cardElevation="0dp"
    android:padding="12dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#FF0000"
    android:id="@+id/weatherCardBackground"
    android:background="@null">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop ="4dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurfaceSecondary" />

            <TextView
                android:id="@+id/rainText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/windText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/humidityText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/uvText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudCoverText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cloud Cover: --%"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cloudBaseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cloud Base: -- km"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rainIntensityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Precip Intensity: -- mm/h"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/conditionText"
                android:layout_width="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="12dp"
            android:contentDescription="Weather icon"
            android:paddingEnd="8dp"
            android:src="@drawable/unknown" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
