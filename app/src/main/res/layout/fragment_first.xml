<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1. Spinner -->

        <com.example.myapplication2.StarView
            android:id="@+id/starView"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="25dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/location_dropdown_layout"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface"
            android:popupBackground="@color/colorSurface"
            app:boxBackgroundMode="none"> <!-- Disable all box visuals -->

            <AutoCompleteTextView
                android:id="@+id/location_dropdown"
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:drawablePadding="8dp"
                android:focusable="false"
                android:inputType="none"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- 2. Weather Icon -->
        <ImageView
            android:id="@+id/main_weather_icon"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginTop="32dp"
            android:visibility="invisible"
            android:contentDescription="Weather Icon"
            android:src="@drawable/clear_day"
            app:layout_constraintTop_toBottomOf="@id/location_dropdown_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 3. Temp Text -->
        <TextView
            android:id="@+id/main_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--Â°C"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/main_weather_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/main_condition_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceSecondary"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/main_temp_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 5. Rain Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/rainChart"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:background="#FF0000"
            app:layout_constraintTop_toBottomOf="@id/main_condition_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 6. SunPathScroll -->
        <HorizontalScrollView
            android:id="@+id/sunPathScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/rainChart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="18dp"
                android:gravity="center_horizontal">

                <com.example.myapplication2.SunPathView
                    android:id="@+id/sunPathView"
                    android:layout_width="2000dp"
                    android:layout_height="300dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 7. Weather Container -->
        <LinearLayout
            android:id="@+id/weather_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintTop_toBottomOf="@id/sunPathScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 8. Daily Scroll -->
        <HorizontalScrollView
            android:id="@+id/dailyScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/weather_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/dailySummaryContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <!-- 9. RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weatherRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:padding="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"

            app:layout_constraintTop_toBottomOf="@id/dailyScroll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
